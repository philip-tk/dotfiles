#!/bin/sh

# vt - vim tex
# Used to edit and view latex documents.
# Entr terminal to watch and compile latex document on save.
# For example:
# `vt man.tex`

texfile=$@
docfile=$(echo $texfile | sed "s/.tex/.pdf/g")

setsid -f zathura $docfile
setsid -f st vim $texfile
echo $texfile | entr -s "xelatex $texfile"
